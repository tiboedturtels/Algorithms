                data[i] = i;
            }

            // Create a stopwatch
            Stopwatch sw = new Stopwatch();

            // Time REPTS operations
            for (int i = 0; i < REPTS; i++)
            {
                sw.Start();
                BinarySearch(data, 0);
                sw.Stop();
            }

            // Return the average number of milliseconds that elapsed
            return msecs(sw) / REPTS;

        }


